<div class="flex flex-col justify-center items-center w-full">
  <h2 class="text-2xl font-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, "Email", class: "block text-base font-medium text-black mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, "Password", class: "block text-base font-medium text-black mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center mb-4">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-red-500 focus:ring-red-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, "Remember me", class: "ml-2 text-sm text-black" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: "p-3 w-full text-red-500 bg-white border-2 border-red-500 rounded-md hover:bg-red-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-red-500 font-bold" %>
    </div>
  <% end %>

  <div class="flex justify-center items-center">
    <%= render "devise/shared/links", locals: { class: "text-red-500 hover:underline" } %>
  </div>

</div>