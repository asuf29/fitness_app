<div class="flex flex-col items-center w-full min-h-screen px-4 bg-gray-100">
  <div class="bg-white w-full max-w-3xl p-6 rounded-lg shadow-lg mt-4">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Edit Profile</h1>
    <%= form_with model: current_user, url: profile_path(current_user), local: true do |form| %>
      <div class="mb-6 flex flex-col items-center">
        <% if current_user.profile_picture.attached? %>
          <div class="mb-4">
            <%= image_tag current_user.profile_picture, class: "w-28 h-28 rounded-full shadow-md object-cover" %>
          </div>
          <p class="text-sm text-gray-600">Change your profile picture.</p>
        <% else %>
          <p class="text-sm text-gray-600 mb-4">No profile picture uploaded.</p>
          <p class="text-sm text-gray-600">Upload a profile picture:</p>
        <% end %>
        <div class="flex justify-center">
          <%= form.file_field :profile_picture, class: "mt-2 text-sm file:mr-4 file:ml-8 file:py-2 file:px-4 file:rounded-full file:border file:border-gray-300 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100" %>
        </div>
      </div>

      <div class="mb-4">
        <%= form.label :email, "Email", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :email, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-red-500 focus:border-red-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :first_name, "First Name", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :first_name, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-red-500 focus:border-red-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :last_name, "Last Name", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :last_name, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-red-500 focus:border-red-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :username, "Username", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :username, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-red-500 focus:border-red-500" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Update", class: "bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition duration-200" %>
      </div>
    <% end %>

  </div>
</div>