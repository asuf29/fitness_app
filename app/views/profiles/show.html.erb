<div class="flex flex-col items-center w-full min-h-screen px-4 bg-gray-100">
    <div class="bg-white w-full max-w-3xl p-6 rounded-lg shadow-lg mt-4">
    <div class="flex justify-end mb-4">
      <%= link_to "Edit Profile", edit_profile_path, class: "bg-red-500 text-white font-bold px-6 py-2 rounded-lg hover:bg-red-600 hover:text-white transition duration-200" %>
    </div>
    <div class="w-32 h-32 rounded-full overflow-hidden shadow-lg mx-auto mb-6">
      <% if current_user.profile_picture.attached? %>
        <%= image_tag current_user.profile_picture, class: "w-full h-full object-c_image" %>
      <% else %>
        <div class="flex items-center justify-center w-full h-full bg-gray-300">
          <span class="text-gray-500 text-xl font-bold">No Photo</span>
        </div>
      <% end %>
    </div>
    <h1 class="text-xl font-bold text-gray-800 text-center mb-2"><%= current_user.full_name  %></h1>
    <h2 class="text-base text-gray-400 text-center"><%= current_user.username %></h2>
  </div>
</div>

