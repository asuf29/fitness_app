<div class="flex flex-col items-center w-full min-h-screen py-8 bg-gray-100"> 
  <div class="w-full max-w-3xl px-6 p-6 bg-white">
    <h1 class="text-3xl font-bold text-center mb-8 mt-4">Your workouts</h1>
    <div class="flex justify-end mt-4">
      <%= link_to 'New Workout', new_workout_path, class: "px-6 py-2 bg-red-500 text-white font-bold border-2 rounded-lg hover:bg-white hover:text-red-500" %>
    </div>
    <ul class="space-y-4">
      <% @workouts.each do |workout| %>
        <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition duration-300 ease-in-out">
          <div class="flex flex-col md:flex-row items-center md:items-start md:justify-between">
            <%= link_to workout_path(workout) do %>
              <% if workout.c_image.attached? %>
                <div class="mb-4 md:mb-0 md:mr-4 w-40 h-40 flex-shrink-0">
                  <%= image_tag workout.c_image, class: "w-full h-full object-c_image rounded-lg" %>
                </div>
              <% end %>
            <% end %>
            <div class="flex-1">
              <%= link_to workout_path(workout) do %>
                <h2 class="text-xl font-semibold text-gray-800"><%= workout.name %></h2>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
</div>