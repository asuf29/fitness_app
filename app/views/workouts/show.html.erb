<div class="flex flex-col items-center w-full min-h-screen bg-gray-100 px-4 py-8">
  
  <div class="bg-white w-full max-w-3xl p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8"><%= @workout.name %></h1>
    <% if @workout.c_image.attached? %>
      <div class="flex items-center w-40 h-40 mx-auto">
        <%= image_tag @workout.c_image, class: "object-cover rounded-lg" %>
      </div>
    <% end %>
    <div class="flex justify-end mb-6">
     <%= link_to 'Edit',  edit_workout_path(@workout), class: "px-6 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 shadow-md transition duration-300 mr-2" %>
        <%= link_to 'Delete', workout_path(@workout), data: { turbo_method: :delete }, class: "bg-white text-red-500 px-4 py-2 border-2 font-semibold rounded-lg hover:bg-gray-100 shadow-sm" %>
    </div>
    <% if @exercises.any? %>
      <ul class="space-y-6">
        <% @exercises.each do |exercise| %>
          <%= render "exercise", exercise: exercise %>
        <% end %>
      </ul>
    <% else %>
      <p class="text-center text-gray-500 mt-6">No exercises found for this workout.</p>
    <% end %>
  </div>
</div>
