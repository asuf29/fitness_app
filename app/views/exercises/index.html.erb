<div class="flex flex-col items-center w-full min-h-screen py-8">
  <h1 class="text-3xl font-bold text-center mb-8">Exercises</h1>
  <div class="w-full max-w-3xl px-6">
    <ul class="space-y-4">
      <% @exercises.each do |exercise| %>
        <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition duration-300 ease-in-out">
          <div class="flex flex-col md:flex-row items-center md:items-start md:justify-between">
            <% if exercise.image.attached? %>
              <div class="mb-4 md:mb-0 md:mr-4 w-24 h-24 flex-shrink-0">
                <%= image_tag exercise.image, class: "w-full h-full object-cover rounded-lg" %>
              </div>
            <% end %>
            <div class="flex-1">
              <h2 class="text-xl font-semibold text-gray-800"><%= exercise.name %></h2>
              <p class="text-gray-600"><%= exercise.content %></p>
            </div>
            <div class="flex space-x-4 mt-4 md:mt-0">
              <%= link_to 'Show', exercise_path(exercise), class: "bg-white text-red-500 px-4 py-2 border-2 rounded-lg hover:bg-gray-100" %>
              <%= link_to 'Edit', edit_exercise_path(exercise), class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div class="flex justify-center mt-8">
    <%= link_to 'New Exercise', new_exercise_path, class: "px-6 py-2 bg-red-500 text-white font-bold border-2 rounded-lg hover:bg-white hover:text-red-500" %>
  </div>
</div>