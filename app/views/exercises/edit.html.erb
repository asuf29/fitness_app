<div class="flex flex-col items-center w-full bg-gray-100 min-h-screen py-8">
  <h1 class="text-3xl font-bold text-center mb-8">Edit Exercise</h1>
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-3xl">
    <%= form_with model: @exercise, local: true do |form| %>
      <div class="field">
        <%= form.label :name, class: "block text-lg font-semibold text-gray-700 mb-2" %>
        <%= form.text_field :name,  class: "w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 mb-4", placeholder: "Enter exercise name" %>
      </div>
      <div class="field">
        <%= form.label :content, class: "block text-lg font-semibold text-gray-700 mb-2" %>
        <%= form.rich_text_area :content, class: "w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 mb-4", placeholder: "Enter exercise description", rows: 4 %>
      </div>
      <div class="field">
        <%= form.label :image, "Upload Image", class: "block text-lg font-semibold text-gray-700 mb-2" %>
        <%= form.file_field :image, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="field">
        <%= form.label :muscle, "Muscle Group", class: "block text-lg font-semibold text-gray-700 mb-2" %>
        <%= form.select :muscle, Exercise.muscles.keys.map { |muscle| [muscle.capitalize, muscle] },
          { include_blank: "Select" }, 
          class: "w-full p-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 mb-4" %>
      </div>
      <div class="flex justify-end items-center mt-4">
        <%= form.submit 'Upload', class: "px-6 py-2 bg-red-500 text-white font-semibold rounded-lg border-2 border-red-500 hover:bg-white hover:text-red-500 transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>