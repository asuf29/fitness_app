<div class="flex flex-col items-center w-full min-h-screen bg-gray-100 py-10 px-4">
  <h1 class="text-3xl font-bold mb-6 text-center"><%= @exercise.name %></h1>

  <% if @exercise.image.attached? %>
    <div class="flex justify-center mb-6 w-full">
      <%= image_tag @exercise.image.file_path, class: "w-full max-w-md rounded-lg shadow-md object-cover" %>
    </div>
  <% else %>
    <div class="flex justify-center items-center w-full max-w-md h-64 bg-gray-300 rounded-lg shadow-md">
      <p class="text-gray-500 text-lg text-center">No image available</p>
    </div>
  <% end %>

  <div class="w-full max-w-lg bg-white p-6 rounded-lg shadow-md mt-6">
    <p class="text-gray-700 text-lg leading-relaxed"><%= @exercise.content %></p>
  </div>
</div>
